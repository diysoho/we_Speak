
page{
  padding: 0;
  margin: 0;
  height: 100%;
  width: 100%;
}
.container {
  font-size: 24rpx;
  height: 100%;
  overflow: hidden;
  position: relative;
}
@media screen and (min-width:375px){
  .container{
    font-size: 28rpx !important;
  }
}
@media screen and (min-width:414px){
  .container{
    font-size: 32rpx !important;
  }
}
 ::-webkit-scrollbar{
  height: 0;
  width: 0;
  color: transparent;
} 
